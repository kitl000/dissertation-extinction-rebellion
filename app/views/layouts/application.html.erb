                    <%#= label(p,p) %>
                    <%#= check_box_tag(:category,p,false,{id:p}) %>
                    <%#end %>
                <%= submit_tag("Search") %>
              <% end %>
          </li>
          </ul>
        </div>
      </div>
    </nav>

    <ul class="nav justify-content-center">
      <% if user_signed_in? %>
        <li class="nav-item">
          <h5 class="nav-link"><%= link_to('LOGOUT', destroy_user_session_path, method: :delete) %></h5>
        </li>
      <% else %>
        <li class="nav-item">
          <h5 class="nav-link"><%= link_to('LOGIN', new_user_session_path) %></h5>
        </li>
        <li class="nav-item">
          <h5 class="nav-link"><%= link_to 'LOGIN IN WITH FACEBOOK', user_facebook_omniauth_authorize_path, target: :_blank %></h5>
        </li>
      <% end %>
      </li>
    </ul>
</div>
