        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item">
              <h3 class="nav-link"><%= link_to "HOME", home_index_path %></h3>
            </li>
            <li class="nav-item">
              <h3 class="nav-link"><%= link_to "EVENTS", events_path %></h3>
            </li>
            <li class="nav-item">
              <h3 class="nav-link"><%= link_to "CONTACT", home_contact_path %></h3>
            </li>
            <li class="nav-item">
              <h3><%= form_with(url: events_path, method: "get", local: true) do |f|%></h3>
                <%= label_tag(:search, "Search:") %>
                <%= text_field_tag(:search) %>
                  <%= f.select(:city, $places, :include_blank=> false) %>
                <%# $places.each do |p| %>
                  <%#=  label(p,p) %>
                  <%#= check_box_tag(:city,p,false,{id:p}) %>
                <%# end %>
                  <%= f.select(:category, $categories, :include_blank=> false) %>
